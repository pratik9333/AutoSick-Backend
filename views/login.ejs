    <title>LCO</title>
</head>

<body class="bg-dark text-white">
    <div class="container">
        <h1>LCO Social login</h1>
    </div>
    <div class="container">
        <a href="/api/v1/auth/logout" class="btn btn-outline-success">Logout</a>
        <a href="/api/v1/auth/login" class="btn btn-outline-success">Login</a>
        <a href="/" class="btn btn-outline-success">Home</a>
    </div>
    <div class="container mt-4">
        <a href="/api/v1/auth/google" class="btn btn-danger">google</a>
    </div>
    Login
    <form action="/api/v1/auth/login" method="post">
        <input type="text" name="username">
        <input type="password" name="password">
        <button type="submit">Submit</button>
    </form>

    Signup
    <form action="/api/v1/auth/signup" method="post">
        <input type="text" name="username">
        <input type="password" name="password">
        <button type="submit">Submit</button>
    </form>
</body>

</html>